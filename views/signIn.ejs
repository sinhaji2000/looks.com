<div class="bg-gray-900 min-h-screen flex items-center justify-center">
  <form action="/user/signIn" method="post" class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Sign In</h2>

    <!-- Email Label and Input -->
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
      <input 
        type="email" 
        placeholder="Enter your email" 
        name="email" 
        required 
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
    </div>

    <!-- Password Label and Input -->
    <div class="mb-6">
      <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
      <input 
        type="password" 
        placeholder="Enter your password" 
        name="password" 
        required 
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
    </div>

    <!-- Submit Button -->
    <button 
      type="submit" 
      class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition-colors duration-300"
    >
      Sign In
    </button>
  </form>
</div>
