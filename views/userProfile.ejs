<% if (user.id == profile_user.id) { %>
  <!-- Profile Section (Editable for Owner) -->
  <div class="flex flex-col sm:flex-row gap-5 p-5 bg-white rounded-lg shadow-md items-start sm:items-center mb-6 hover:shadow-lg transition-shadow duration-300 ease-in-out">
    <div class="flex flex-col items-center">
      <div class="relative group">
        <img src="<%= user.avatar %>" alt="user pic" class="h-32 w-32 rounded-full shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out object-cover">
        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-60 transition-opacity duration-300 flex items-center justify-center rounded-full">
          <p class="text-white text-sm opacity-0 group-hover:opacity-100">Change Avatar</p>
        </div>
      </div>
      <p class="text-2xl font-bold text-gray-900 mt-4 group-hover:text-blue-600 transition-colors duration-300"><%= profile_user.name %></p>
      <p class="text-lg text-gray-600 group-hover:text-gray-800 transition-colors duration-300"><%= profile_user.email %></p>
    </div>
  </div>

  <!-- Form for Updating Profile -->
  <form action="/user/update_profile/<%= profile_user.id %>" method="post" class="space-y-4 bg-white p-6 rounded-lg shadow-md w-full max-w-lg" enctype="multipart/form-data">
    <!-- Name Input -->
    <div class="flex flex-col">
      <label for="name" class="text-lg font-semibold text-gray-700 mb-2">Your Name</label>
      <input 
        type="text" 
        name="name" 
        id="name" 
        placeholder="Your name" 
        value="<%= profile_user.name %>" 
        class="p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
        required
      >
    </div>

    <!-- Profile Picture Input -->
    <div class="flex flex-col">
      <label for="avatar" class="text-lg font-semibold text-gray-700 mb-2">Profile Picture</label>
      <input 
        type="file" 
        name="avatar" 
        id="avatar" 
        class="p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
      >
    </div>

    <!-- Email Input -->
    <div class="flex flex-col">
      <label for="email" class="text-lg font-semibold text-gray-700 mb-2">Your Email</label>
      <input 
        type="email" 
        name="email" 
        id="email" 
        placeholder="Your email" 
        value="<%= profile_user.email %>" 
        class="p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
        required
      >
    </div>

    <!-- Submit Button -->
    <div class="text-right">
      <button 
        type="submit" 
        class="bg-blue-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-blue-600 hover:shadow-lg transition duration-300"
      >
        Update Profile
      </button>
    </div>
  </form>

<% } else { %>
  <!-- Profile Section (View Only for Others) -->
  <div class="flex flex-col sm:flex-row gap-5 p-5 bg-white rounded-lg shadow-md items-start sm:items-center hover:shadow-lg transition-shadow duration-300 ease-in-out">
    <div class="flex flex-col items-center">
      <img src="<%= profile_user.avatar %>" alt="user pic" class="h-32 w-32 rounded-full shadow-md object-cover">
      <p class="text-2xl font-bold text-gray-900 mt-4 hover:text-blue-600 transition-colors duration-300"><%= profile_user.name %></p>
      <p class="text-lg text-gray-600 hover:text-gray-800 transition-colors duration-300"><%= profile_user.email %></p>
    </div>
  </div>
<% } %>
